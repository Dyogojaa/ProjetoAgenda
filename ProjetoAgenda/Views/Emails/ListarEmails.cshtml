@model IEnumerable<ProjetoAgenda.Models.Email>

<form class="form-horizontal">
    <h3>Telefones</h3>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input type="text" id="Email" name="Email" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" onclick="SalvarEmail();">Gravar</a>
            </div>
        </div>
    </div>
    <input type="hidden" id="idContato" value="@ViewBag.Contato" />

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnderecoEmail)
                </th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var linha = "tr" + item.Id;

                <tr id="@linha">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnderecoEmail)
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
</form>